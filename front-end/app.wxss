.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
}
.title{
    margin-top: 50rpx;
    margin-bottom: 10rpx;
    display: inline-block;
    position: relative;
    background: #5d9ef3;
